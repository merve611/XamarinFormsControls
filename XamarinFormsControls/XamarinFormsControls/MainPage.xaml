             x:Class="XamarinFormsControls.MainPage">

    <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="Red" Orientation="Vertical">

        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="Green"
                     Orientation="Horizontal">
            <Button Text="Push me!" BackgroundColor="Chocolate" VerticalOptions="Center" HorizontalOptions="StartAndExpand"/>
            <Entry Placeholder="I'm placeholder!" BackgroundColor="Pink" VerticalOptions="Center" HorizontalOptions="CenterAndExpand"/>
            <Switch BackgroundColor="DarkBlue" VerticalOptions="Center" HorizontalOptions="EndAndExpand"/>
            
        </StackLayout>
        
        <Label Text="Xamarine hoşgeldiniz   !" HorizontalOptions="Center" 
                   VerticalOptions="CenterAndExpand" BackgroundColor="LightBlue" FontSize="Medium"/>

        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="LightYellow">
            
        </StackLayout>
     
    </StackLayout>

</ContentPage>
